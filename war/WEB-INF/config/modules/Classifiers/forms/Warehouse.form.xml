<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form []>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="Warehouse" viewName="Warehouses" caption="=warehouse"
  height="300" width="800"
  >
  <FlowPanel>
    <Table style="margin: 1ex 1em;">
      <col index="0" kind="label" />
      <col index="2" kind="label" />

      <row>
        <Label for="Code" />
        <InputText source="Code" style="width: 100px;" />
        <Label for="Name" />
        <InputText source="Name" style="width: 400px;" />
      </row>
      <row module="Ec">
        <Label for="SupplierCode" />
        <InputText source="SupplierCode" style="width: 100px;" />
        <Label for="Branch" />
        <DataSelector source="Branch" />
      </row>
      <row>
        <Label for="Description" />
        <cell colSpan="3">
          <InputArea source="Description" visibleLines="3" style="width: 100%;" />
        </cell>
      </row>
    </Table>

    <xi:include href="widgets/ContactInfoOpen.widget.xml" />
  </FlowPanel>
</f:Form>  
