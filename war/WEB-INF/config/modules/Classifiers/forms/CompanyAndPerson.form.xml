<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form []>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="CompanyAndPerson" viewName="CompanyPersons" caption="=companyPerson"
  height="300" width="800"
  >
  <FlowPanel class="flexBox-vertical">
    <Table style="border-spacing: 10px;">
      <row>
        <Label for="FirstName" />
        <InputText style="width: 200px" source="FirstName" />
        <Label for="LastName" />
        <InputText style="width: 200px" source="LastName" />
      </row>
      <row>
        <Label for="Company" />
        <DataSelector source="Company" style="width: 200px" />
        <Label for="Position" />
        <DataSelector source="Position" style="width: 200px" />
      </row>
      <row>
        <cell colSpan="4">
          <xi:include href="widgets/ContactInfoOpen.widget.xml" />
        </cell>
      </row>
    </Table>
  </FlowPanel>
</f:Form>  
