<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form []>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="CompanyPerson" viewName="CompaniesAndPersons" caption="=companyPerson"
  height="350" width="850"
  >
  <FlowPanel>
    <Table style="margin-top: 1ex;">
      <col index="0" kind="label" />
      <col index="2" kind="label" />

      <row>
        <Label for="Person" />
        <DataSelector source="Person" style="width: 200px" />
        <Label for="Position" />
        <DataSelector source="Position" style="width: 200px" />
      </row>
      <row>
        <Label for="TabNo" />
        <InputText source="TabNo" style="width: 200px" />
        <Label for="Department" />
        <DataSelector source="Department" style="width: 200px" />
      </row>
      <row>
        <Label for="AccountingCode" />
        <InputText source="AccountingCode" style="width: 200px" />
        <Label for="DateOfEmployment" />
        <InputDate source="DateOfEmployment" style="width: 200px" />
      </row>
    </Table>

    <xi:include href="widgets/ContactInfoOpen.widget.xml" />
  </FlowPanel>
</f:Form>  
