  name="CompanyUsers" viewName="CompanyUsers"
  flexGrow="1"
  >
  <g:columns>
    <RelColumn name="User" minWidth="150" maxWidth="200" visible="true">
      <renderToken source="FirstName" suffix=" " />
      <renderToken source="LastName" />
