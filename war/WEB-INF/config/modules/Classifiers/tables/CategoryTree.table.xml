<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="CategoryTree"
  idName="CategoryID"
  >
  <Fields>
    <String name="Name" precision="60" notNull="true" label="=name" />
    <Relation name="Parent" relation="CategoryTree" label="=category" />

    <Relation name="Department" relation="Departments" label="=department" />
    <Relation name="ActivityType" relation="ActivityTypes" label="=activityType" />
    <Relation name="CostCenter" relation="CostCenters" label="=costCenter" />
  </Fields>

  <Constraints>
    <Unique fields="Parent Name" />
  </Constraints>
</Table>
