<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:w="http://www.butent.com/widget"

  name="Requests" viewName="Requests" caption="=crmRequests"
  flexGrow="1" order="RequestID desc"
  >

  <g:north size="40">
    <w:HorizontalPanel style="border-spacing: 8px 0px">
      <w:CheckBox name="Registred" text="=requestShowRegistered" checked="true"/>
      <w:CheckBox name="Finished" text="=requestShowFinished" />
    </w:HorizontalPanel>
  </g:north>

  <g:columns>
    <IdColumn name="ID" width="50" />
    <DataColumn name="Date" caption="=date" width="100" visible="true" />
    <DataColumn name="Finished" caption="=crmRequestFinish" width="100" format="DATE_TIME_SHORT" />
    <RelColumn name="Customer" caption="=client" minWidth="100" visible="true" />

    <DataColumn name="Content" caption="=crmRequest" minWidth="100" flexShrink="1" 
      whiteSpace="nowrap" visible="true" />

    <RelColumn name="Manager" caption="=responsiblePerson" minWidth="100" />
    <DataColumn name="Result" visible="false" />
  </g:columns>
  
  <!-- <g:predefinedFilter name="Executing" label="=crmRequestFilterActive">
    <g:column name="Finished" emptyValues="true" />
  </g:predefinedFilter> -->
</g:Grid>
