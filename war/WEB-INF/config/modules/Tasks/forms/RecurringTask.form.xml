<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="RecurringTask" viewName="RecurringTasks"
  caption="=crmRecurringTask" showRowId="true"
  width="700" height="700">

  <FlowPanel class="flexBox-vertical" style="padding: 10px 2px 2px 10px;">
    <xi:include href="widgets/RTBody.widget.xml" />

    <br/>
    <TabbedPages class="flexible">
      <page>
        <text>=crmRecurrence</text>
        <xi:include href="widgets/RTCron.widget.xml" />
      </page>

      <page>
        <text>=crmRTDateExceptions</text>
        <ChildGrid name="RTDates" relColumn="RecurringTask" />
      </page>

      <page>
        <text>=description</text>
        <SimplePanel>
          <InputArea source="Description" class="occupy-1" summarize="true" />
        </SimplePanel>
      </page>  

      <page data="Relations" for="RecurringTask">
        <text>=relatedTo</text>
        <Relations relColumn="RecurringTask" inline="true" summarize="true">
          <Relation viewName="Companies" renderColumns="Name" newRowEnabled="false" editPopup="true" />
          <Relation viewName="Persons" renderColumns="FirstName LastName" newRowEnabled="false" editPopup="true" />
          <Relation viewName="Documents" renderColumns="Name" newRowEnabled="false" editPopup="true" />
          <Relation viewName="Appointments" renderColumns="Summary" editPopup="true"
            choiceColumns="Summary StartDateTime EndDateTime" />
          <Relation viewName="Discussions" renderColumns="Subject" newRowEnabled="false" editPopup="true" />
          <Relation viewName="ServiceObjects" renderColumns="Address" newRowEnabled="false" editPopup="true"
            choiceColumns="Address CustomerName" />
          <Relation viewName="Tasks" renderColumns="Summary ExecutorFirstName ExecutorLastName"
            newRowEnabled="false" editPopup="true"
            choiceColumns="Summary ExecutorFirstName ExecutorLastName StartTime FinishTime" />
        </Relations>
      </page>
      
      <page>
        <text>=files</text>
        <ChildGrid name="RTFiles" relColumn="RecurringTask" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
