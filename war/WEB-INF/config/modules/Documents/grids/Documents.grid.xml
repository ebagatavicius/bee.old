<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:w="http://www.butent.com/widget"
  
  name="Documents" viewName="Documents" caption="=documentTree"
  newRowForm="NewDocument" editForm="Document" parent="Tree" favorite="Name"
  flexGrow="1" order="DocumentID desc"
  >
  
  <g:west size="200" splitterSize="2">
    <w:DataTree class="bee-documents-parentWiget" name="Tree" caption="=documentCategories"
    viewName="DocumentTree" parentColumn="Parent" favorite="Name">
      <w:calc>
        <ui:expression>row.Name + (row.DocumentCount != 0 ? ' [' + row.DocumentCount + ']' : '')</ui:expression>
      </w:calc>
      <w:form name="EditCategory">
          <w:FlowPanel>
            <w:Label for="Name" />
            <w:InputText source="Name" />
          </w:FlowPanel>
      </w:form>
    </w:DataTree>
  </g:west>
  
  <g:columns>
    <DataColumn name="Name" visible="true" />
    <DataColumn name="DocumentDate" />
    <DataColumn name="Expires" />
    <DataColumn name="Number" />
    <DataColumn name="TypeName" />
    <DataColumn name="PlaceName" />
    <DataColumn name="StatusName" />

    <IdColumn name="Id" visible="false" />
    <DataColumn name="RegistrationNumber" visible="false" />
    <DataColumn name="Received" visible="false" />
    <DataColumn name="Sent" visible="false" />
    <DataColumn name="Returned" visible="false" />
    <DataColumn name="Description" visible="false" />
  </g:columns>
  
  <g:predefinedFilter name="not_returned" label="=documentFilterNotReturned">
    <g:column name="Sent" emptyValues="false" />
    <g:column name="Returned" emptyValues="true" />
  </g:predefinedFilter>
</g:Grid>
