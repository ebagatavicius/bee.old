<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  
  name="DocumentTree" caption="=documentCategories"
  >
  <SplitPanel>
    <west size="300" splitterSize="2">
      <DataTree name="Tree" caption="=documentCategories" viewName="DocumentTree"
        parentColumn="Parent" orderColumn="Order">
        <calc>
          <ui:expression>row.Name</ui:expression>
        </calc>
        <form name="EditCategory">
          <FlowPanel>
            <Label for="Name" />
            <InputText source="Name" />
          </FlowPanel>
        </form>
      </DataTree>
    </west>
    <center>
      <FlowPanel name="Rights" />
    </center>
  </SplitPanel>
</f:Form>  
