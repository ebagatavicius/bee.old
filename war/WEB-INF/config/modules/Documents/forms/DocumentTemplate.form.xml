<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  
  name="DocumentTemplate" caption="=documentTemplate"
  >
  <FlowPanel class="flexBox-vertical">
    <HorizontalPanel style="margin-bottom: 10px;">
      <Label for="Category" horizontalAlignment="right" />
      <DataSelector source="Category" />
      <Label for="Name" horizontalAlignment="right" />
      <InputText source="Name" />
    </HorizontalPanel>
    
    <TabbedPages class="flexible">
      <page>
        <text>=criteria</text>
        <xi:include href="widgets/Criteria.widget.xml" />
      </page>
      <page>
        <text>=content</text>
        <xi:include href="widgets/Content.widget.xml" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>  
