<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/widget">

   <col index="0" kind="label" />
   <col index="2" kind="label" />

  <row>
    <Label for="Name" visible="true" />
    <cell colSpan="3">
      <InputText source="Name" style="width: 100%;" autocomplete="true" visible="true" />
    </cell>
  </row>

  <row>
    <Label for="DocumentDate" />
    <InputDateTime source="DocumentDate" />
    <Label for="Expires" />
    <InputDateTime source="Expires" />
  </row>

  <row>
    <Label for="Number" />
    <InputText source="Number" />
    <Label text="=documentRegistrationNumberShort" for="RegistrationNumber" />
    <InputText source="RegistrationNumber" />
  </row>

  <row>
    <Label for="Category" />
    <DataSelector source="Category" caching="local" choiceColumns="ParentName Name" />
    <Label for="Type" />
    <DataSelector source="Type" />
  </row>

  <row>
    <Label for="Place" />
    <DataSelector source="Place" />
    <Label for="Status" />
    <DataSelector source="Status" />
  </row>

  <row>
    <Label for="Received" />
    <InputDateTime source="Received" />
    <Label for="Sent" />
    <InputDateTime source="Sent" />
  </row>
  <row>
    <cell><text /></cell>
    <cell><text /></cell>
    <cell><text /></cell>
  
    <CheckBox source="Returned" text="=documentReturned" />
  </row>

  <row>
    <Label for="Description" />
    <cell colSpan="3">
      <InputArea source="Description" style="width: 100%; height: 60px;" />
    </cell>
  </row>
</Table>
  