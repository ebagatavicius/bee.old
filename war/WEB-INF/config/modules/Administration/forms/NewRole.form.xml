      </row>
      <row>
        <Label name="RoleCaption" text="=rightsInheritedFrom" />
        <UnboundSelector name="Role" viewName="Roles" newRowEnabled="false" />
      </row>
    </Table>
  </FlowPanel>
</f:Form>  
