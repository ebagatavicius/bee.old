<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="GridColumnSettings"
  idName="GridColumnSettingID"
  >
  <Fields>
    <Relation name="GridSetting" notNull="true" relation="GridSettings" cascade="DELETE" />
    <String name="Name" precision="30" notNull="true" />

    <String name="Caption" precision="100" />

    <Integer name="Width" />
    <Integer name="MinWidth" />
    <Integer name="MaxWidth" />

    <Boolean name="AutoFit" />

    <Integer name="FlexGrow" />
    <Integer name="FlexShrink" />
    <Integer name="FlexBasis" />
    <String name="FlexBasisUnit" precision="3" />

    <String name="Format" precision="30" />

    <Boolean name="EditInPlace" />

    <Text name="HeaderStyle" />
    <String name="HeaderFont" precision="60" />

    <Text name="BodyStyle" />
    <String name="BodyFont" precision="60" />

    <Text name="FooterStyle" />
    <String name="FooterFont" precision="60" />
  </Fields>
  
  <Constraints>
    <Unique fields="GridSetting Name" />
  </Constraints>
</Table>
