<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"

  name="PrintContract" source="AssessmentForwarders" caption="=trContract"
  >
  <Columns>
    <SimpleJoin name="CargoTrip" joinType="INNER">
      <SimpleJoin joinType="INNER" name="Cargo">
        <SimpleColumn name="Description" />
        <SimpleColumn name="Weight" />
        <SimpleJoin joinType="LEFT" name="WeightUnit">
          <SimpleColumn name="Name" alias="WeightUnit" />
        </SimpleJoin>
        <SimpleColumn name="Volume" />
        <SimpleJoin joinType="LEFT" name="VolumeUnit">
          <SimpleColumn name="Name" alias="VolumeUnit" />
        </SimpleJoin>
        <SimpleColumn name="Quantity" />
        <SimpleJoin joinType="LEFT" name="QuantityUnit">
          <SimpleColumn name="Name" alias="QuantityUnit" />
        </SimpleJoin>

        <SimpleJoin name="Order" joinType="INNER">
          <SimpleJoin name="Manager" joinType="INNER">
            <SimpleJoin name="CompanyPerson" joinType="LEFT">
              <SimpleJoin name="Position" joinType="LEFT">
                <SimpleColumn name="Name" alias="Position" />
              </SimpleJoin>

              <SimpleColumn name="Company" alias="Customer" />
    
              <SimpleJoin name="Person" joinType="LEFT">
                <SimpleColumn name="FirstName" />
                <SimpleColumn name="LastName" />
              </SimpleJoin>
    
              <SimpleJoin name="Contact" joinType="LEFT">
                <SimpleColumn name="Phone" />
                <SimpleColumn name="Mobile" />
                <SimpleJoin name="Email" joinType="LEFT">
                  <SimpleColumn name="Email" />
                </SimpleJoin>
              </SimpleJoin>
            </SimpleJoin>
          </SimpleJoin>
        </SimpleJoin>
      </SimpleJoin>
      
      <SimpleJoin joinType="LEFT" name="Trip">
        <SimpleColumn name="Forwarder" />
        <SimpleColumn name="ForwarderVehicle" />
        <SimpleColumn name="Notes" />
      </SimpleJoin>
  
      <SimpleJoin name="LoadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="LoadingDate" />    
        <SimpleColumn name="Address" alias="LoadingAddress" />
        <SimpleColumn name="PostIndex" alias="LoadingPostIndex" />
        <SimpleJoin joinType="LEFT" name="City">
          <SimpleColumn name="Name" alias="LoadingCityName" />
        </SimpleJoin>
        <SimpleJoin joinType="LEFT" name="Country">
          <SimpleColumn name="Name" alias="LoadingCountryName" />
        </SimpleJoin>
      </SimpleJoin>
  
      <SimpleJoin name="UnloadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="UnloadingDate" />
        <SimpleColumn name="Address" alias="UnloadingAddress" />
        <SimpleColumn name="PostIndex" alias="UnloadingPostIndex" />
        <SimpleJoin joinType="LEFT" name="City">
          <SimpleColumn name="Name" alias="UnloadingCityName" />
        </SimpleJoin>
        <SimpleJoin joinType="LEFT" name="Country">
          <SimpleColumn name="Name" alias="UnloadingCountryName" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>

    <SimpleJoin joinType="INNER" name="CargoExpense">
      <SimpleColumn name="Amount" />
      <SimpleJoin joinType="LEFT" name="Currency">
        <SimpleColumn name="Name" alias="CurrencyName" />
      </SimpleJoin>
      <SimpleColumn name="Date" />
      <SimpleColumn name="Number" />
      <SimpleColumn name="Note" />
    </SimpleJoin>
  </Columns>
</View>
