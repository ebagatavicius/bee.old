<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
  xmlns:x="http://www.butent.com/expression"

  name="PrintOrder"
  source="Assessments"
  >
  <Columns>
    <SimpleColumn name="Assessment" />

    <SimpleJoin name="Cargo" joinType="INNER">
      <SimpleJoin name="Order" joinType="INNER">
        <SimpleColumn name="Date" />
        <SimpleColumn name="Notes" alias="OrderNotes" />

        <SimpleColumn name="Customer" />
        <SimpleJoin name="Customer" joinType="INNER">
          <SimpleColumn name="CreditDays" />
          <SimpleColumn name="DaysAsBuyer" />
        </SimpleJoin>

        <SimpleJoin name="Manager" joinType="INNER">
          <SimpleJoin name="CompanyPerson" joinType="LEFT">
            <SimpleJoin name="Position" joinType="LEFT">
              <SimpleColumn name="Name" alias="Position" />
            </SimpleJoin>
            <SimpleColumn name="Company" alias="Forwarder" />
    
            <SimpleJoin name="Person" joinType="LEFT">
              <SimpleColumn name="FirstName" />
              <SimpleColumn name="LastName" />
            </SimpleJoin>
    
            <SimpleJoin name="Contact" joinType="LEFT">
              <SimpleColumn name="Phone" />
              <SimpleColumn name="Mobile" />
              <SimpleJoin name="Email" joinType="LEFT">
                <SimpleColumn name="Email" />
              </SimpleJoin>
            </SimpleJoin>
          </SimpleJoin>
        </SimpleJoin>
      </SimpleJoin>

      <SimpleJoin name="LoadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="LoadingDate" />
      </SimpleJoin>
      <SimpleJoin name="UnloadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="UnloadingDate" />
      </SimpleJoin>

      <SimpleColumn name="Description" />
      <SimpleColumn name="Notes" alias="CargoNotes" />
      <SimpleColumn name="Number" />
      <SimpleColumn name="Directions" alias="Shipper" />

      <SimpleColumn name="Weight" />
      <SimpleJoin joinType="LEFT" name="WeightUnit">
        <SimpleColumn name="Name" alias="WeightUnitName" />
      </SimpleJoin>
  
      <SimpleColumn name="Volume" />
      <SimpleJoin joinType="LEFT" name="VolumeUnit">
        <SimpleColumn name="Name" alias="VolumeUnitName" />
      </SimpleJoin>
  
      <SimpleColumn name="Quantity" />
      <SimpleJoin joinType="LEFT" name="QuantityUnit">
        <SimpleColumn name="Name" alias="QuantityUnitName" />
      </SimpleJoin>

      <SimpleColumn name="Value" />
      <SimpleJoin joinType="LEFT" name="ValueCurrency">
        <SimpleColumn name="Name" alias="ValueCurrencyName" />
      </SimpleJoin>

      <SimpleColumn name="Currency" />
      <SimpleJoin joinType="LEFT" name="Currency">
        <SimpleColumn name="Name" alias="CurrencyName" />
      </SimpleJoin>
    </SimpleJoin>
  </Columns>
</View>
