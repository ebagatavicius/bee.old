<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
  xmlns:xpr="http://www.butent.com/expression"

  name="OrderCargo"
  source="OrderCargo"
  editForm="OrderCargo"
  caption="=cargos"
  >
  <Relation renderColumns="Description"
    choiceColumns="Description LoadingDate LoadingCountryCode UnloadingDate UnloadingCountryCode" />
  <Columns>
    <SimpleColumn name="Order" />
    
    <SimpleJoin name="LoadingPlace" joinType="LEFT">
      <SimpleColumn name="Date" alias="LoadingDate" label="=trLoadingDate" />
      <SimpleColumn name="Number" alias="LoadingNumber" />
      <SimpleColumn name="Contact" alias="LoadingContact" label="=trLoadingContact" />
      <SimpleColumn name="Company" alias="LoadingCompany" label="=trLoadingCompany" />
      <SimpleColumn name="Address" alias="LoadingAddress" label="=trLoadingAddress" />
      <SimpleColumn name="PostIndex" alias="LoadingPostIndex" label="=trLoadingPostIndex" />

      <SimpleColumn name="City" alias="LoadingCity" label="=trLoadingCity" />
      <SimpleJoin joinType="LEFT" name="City">
        <SimpleColumn name="Name" alias="LoadingCityName" />
      </SimpleJoin>
      <SimpleColumn name="Country" alias="LoadingCountry" label="=trLoadingCountry" />
      <SimpleJoin joinType="LEFT" name="Country">
        <SimpleColumn name="Name" alias="LoadingCountryName" />
        <SimpleColumn name="Code" alias="LoadingCountryCode" />
      </SimpleJoin>
    </SimpleJoin>

    <SimpleJoin name="UnloadingPlace" joinType="LEFT">
      <SimpleColumn name="Date" alias="UnloadingDate" label="=trUnloadingDate" />
      <SimpleColumn name="Number" alias="UnloadingNumber" />
      <SimpleColumn name="Contact" alias="UnloadingContact" label="=trUnloadingContact"  />
      <SimpleColumn name="Company" alias="UnloadingCompany" label="=trUnloadingCompany" />
      <SimpleColumn name="Address" alias="UnloadingAddress" label="=trUnloadingAddress" />
      <SimpleColumn name="PostIndex" alias="UnloadingPostIndex" label="=trUnloadingPostIndex" />

      <SimpleColumn name="City" alias="UnloadingCity" label="=trUnloadingCity" />
      <SimpleJoin joinType="LEFT" name="City">
        <SimpleColumn name="Name" alias="UnloadingCityName" />
      </SimpleJoin>
      <SimpleColumn name="Country" alias="UnloadingCountry" label="=trUnloadingCountry" />
      <SimpleJoin joinType="LEFT" name="Country">
        <SimpleColumn name="Name" alias="UnloadingCountryName" />
        <SimpleColumn name="Code" alias="UnloadingCountryCode" />
      </SimpleJoin>
    </SimpleJoin>
    
    <SimpleColumn name="Description" />

    <SimpleColumn name="Weight" />
    <SimpleColumn name="WeightUnit" />
    <SimpleJoin joinType="LEFT" name="WeightUnit">
      <SimpleColumn name="Name" alias="WeightUnitName" />
    </SimpleJoin>

    <SimpleColumn name="Volume" />
    <SimpleColumn name="VolumeUnit" />
    <SimpleJoin joinType="LEFT" name="VolumeUnit">
      <SimpleColumn name="Name" alias="VolumeUnitName" />
    </SimpleJoin>

    <SimpleColumn name="Quantity" />
    <SimpleColumn name="QuantityUnit" />
    <SimpleJoin joinType="LEFT" name="QuantityUnit">
      <SimpleColumn name="Name" alias="QuantityUnitName" />
    </SimpleJoin>

    <SimpleColumn name="LDM" />
    <SimpleColumn name="Length" />
    <SimpleColumn name="Width" />
    <SimpleColumn name="Height" />
    <SimpleColumn name="Palettes" />

    <SimpleColumn name="Value" />
    <SimpleColumn name="ValueCurrency" />
    <SimpleJoin joinType="LEFT" name="ValueCurrency">
      <SimpleColumn name="Name" alias="ValueCurrencyName" />
    </SimpleJoin>

    <SimpleColumn name="Number" />
    <SimpleColumn name="Cmr" />
    <SimpleColumn name="LoadedKilometers" />
    <SimpleColumn name="EmptyKilometers" />

    <SimpleColumn name="ShippingTerm" />
    <SimpleJoin joinType="LEFT" name="ShippingTerm">
      <SimpleColumn name="Name" alias="ShippingTermName" />
    </SimpleJoin>

    <SimpleColumn name="Partial" />
    <SimpleColumn name="Outsized" />
    <SimpleColumn name="Dangerous" />
    <SimpleColumn name="ExchangeOfPalettes" />

    <ExternalJoin source="CargoTrips" name="Cargo" joinType="LEFT">
      <SimpleJoin name="Trip" joinType="LEFT">
        <AggregateColumn name="Expedition" aggregate="MAX" />
      </SimpleJoin>
    </ExternalJoin>
    
    <SimpleColumn name="Notes" />
    <SimpleColumn name="Directions" />
    <SimpleColumn name="Currency" />
    <SimpleJoin joinType="LEFT" name="Currency">
      <SimpleColumn name="Name" alias="CurrencyName" />
    </SimpleJoin>
  </Columns>
  <Order>
    <OrderBy column="LoadingDate" />
  </Order>
</View>
