<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="TripRoutes" viewName="TripRoutes" caption="=trTripRoutes"
  >

  <g:columns>
    <DataColumn name="Date" caption="=date" updateMode="row">
      <carry><ui:expression>row.Date</ui:expression></carry>
    </DataColumn>
    <RelColumn name="Country" caption="=country">
      <carry><ui:expression>row.Country</ui:expression></carry>
    </RelColumn>
    <DataColumn name="Route" caption="=route" />
    <DataColumn name="SpeedometerFrom" caption="=trSpeedometerFromShort" format="#.0" minValue="0" updateMode="row">
      <carry><ui:expression>row.SpeedometerTo</ui:expression></carry>
    </DataColumn>
    <DataColumn name="SpeedometerTo" caption="=trSpeedometerToShort" format="#.0" minValue="0" updateMode="row" />
    <DataColumn name="Kilometers" caption="=kilometersShort" format="#.0" minValue="0" updateMode="row">
      <style>
        <headerStyle><ui:font>bold</ui:font></headerStyle>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
    </DataColumn>
    <DataColumn name="MotoHours" caption="=trMotoHourShort" format="#.00" minValue="0" updateMode="row">
      <style>
        <headerStyle><ui:font>bold</ui:font></headerStyle>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
    </DataColumn>
    <DataColumn name="CargoWeight" caption="=trLoadedInTons" format="#.000" updateMode="row">
      <carry><ui:expression>row.CargoWeight</ui:expression></carry>
    </DataColumn>
    <DataColumn name="Season" caption="=trSeason" updateMode="row">
      <carry><ui:expression>row.Season</ui:expression></carry>
    </DataColumn>
    <DataColumn name="Temperature" caption="=trTemperatureShort" updateMode="row" />
    <DataColumn name="Consumption" caption="=liters" updateMode="row">
      <style>
        <headerStyle><ui:font>bold</ui:font></headerStyle>
        <bodyStyle><ui:font>bold</ui:font></bodyStyle>
      </style>
    </DataColumn>
    <RelColumn name="Item" caption="=trAccountingItem">
      <carry><ui:expression>row.Item</ui:expression></carry>
    </RelColumn>
  </g:columns>
</g:Grid>
