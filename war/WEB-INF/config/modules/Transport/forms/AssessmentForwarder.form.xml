<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY section "margin-top: 4px;">
  <!ENTITY separator "<hr/>">
  <!ENTITY inline "display:inline-block;">
  <!ENTITY labelLeft "&inline; width:90px; padding-top:1px;">
  <!ENTITY labelRight "&labelLeft; text-align:right; margin-right:10px;">
  <!ENTITY input "&inline; width:110px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"  
  
  name="AssessmentForwarder" viewName="AssessmentForwarders" caption="=carrier"
  height="600"
  >
  <f:properties reports="PrintContractLT, PrintContractEN, PrintContractRU" />

  <FlowPanel style="padding: 10px 2px 2px 10px;">
    <FlowPanel for="Forwarder" style="&section;">
      <Label for="Forwarder" class="bee-required" style="&labelLeft; width:140px;" />
      <DataSelector source="Forwarder" required="true" style="&input; width:200px;" />
    </FlowPanel>
    <FlowPanel for="Expedition" style="&section;">
      <Label for="Expedition" class="bee-required" style="&labelLeft; width:140px;" />
      <DataSelector source="Expedition" required="true" style="&input; width:150px;"  />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label for="Date" class="bee-required" style="&labelLeft;" />
      <InputDate source="Date" required="true" style="&input;" />
      <Label for="Service" style="&labelRight;" />
      <DataSelector source="Service" style="&input; width:190px;" />
    </FlowPanel>

    <FlowPanel style="&section;">
      <Label for="Number" style="&labelLeft;" />
      <InputText source="Number" style="&input;" />
      <Label for="Amount" style="&labelRight;" />
      <InputMoney source="Amount" style="&input; width:70px;" />
      <DataSelector source="Currency" style="&inline; width:40px; margin-left:5px;" 
        editEnabled="false" placeholder="=currencyShort" />
    </FlowPanel>

    <FlowPanel for="Supplier" style="&section;">
      <Label for="Supplier" style="&labelLeft;" />
      <DataSelector source="Supplier" style="&input; width:200px;" />
    </FlowPanel>

    <FlowPanel for="Note" style="&section;">
      <Label for="Note" style="&labelLeft;" />
      <InputText source="Note" style="&input; width:400px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label text="=loading" style="&labelLeft; font-weight:bold; width:280px; text-align:center;" />
      <Label for="LoadingDate" text="=date" style="&labelRight;" />
      <InputDateTime source="LoadingDate" style="&input;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label for="LoadingCompany" text="=company" style="&labelLeft;" />
      <InputText source="LoadingCompany" style="&inline;" />
      <Label for="LoadingCountry" text="=country" style="&labelRight;" />
      <DataSelector source="LoadingCountry" style="&inline;" >
        <renderToken source="LoadingCountryName" />
        <renderToken source="LoadingCountryCode" prefix=" (" suffix=")" />
        <selectorColumn source="Name" />
        <selectorColumn source="Code">
          <ui:renderer type="flag" />
        </selectorColumn>
      </DataSelector>
    </FlowPanel>
    <FlowPanel for="LoadingAddress" style="&section;">
      <Label for="LoadingCity" text="=city" style="&labelLeft;" />
      <DataSelector source="LoadingCity" style="&input; width:210px;" />
      <Label for="LoadingPostIndex" text="=postIndex" style="&labelRight;" />
      <InputText source="LoadingPostIndex" style="&input; width:90px;" />
    </FlowPanel>
    <FlowPanel for="LoadingAddress" style="&section;">
      <Label for="LoadingAddress" text="=address" style="&labelLeft;" />
      <InputText source="LoadingAddress" style="&input; width:400px;" />
    </FlowPanel>
    <FlowPanel for="LoadingContact" style="&section;">
      <Label for="LoadingContact" text="=contact" style="&labelLeft;" />
      <InputText source="LoadingContact" style="&input; width:400px;" />
    </FlowPanel>

    &separator;
    <FlowPanel style="&section;">
      <Label text="=unloading" style="&labelLeft; font-weight:bold; width:280px; text-align:center;" />
      <Label for="UnloadingDate" text="=date" style="&labelRight;" />
      <InputDateTime source="UnloadingDate" style="&input;" />
    </FlowPanel>
    <FlowPanel style="&section;">
      <Label for="UnloadingCompany" text="=company" style="&labelLeft;" />
      <InputText source="UnloadingCompany" style="&inline;" />
      <Label for="UnloadingCountry" text="=country" style="&labelRight;" />
      <DataSelector source="UnloadingCountry" style="&inline;" >
        <renderToken source="UnloadingCountryName" />
        <renderToken source="UnloadingCountryCode" prefix=" (" suffix=")" />
        <selectorColumn source="Name" />
        <selectorColumn source="Code">
          <ui:renderer type="flag" />
        </selectorColumn>
      </DataSelector>
    </FlowPanel>
    <FlowPanel for="UnloadingAddress" style="&section;">
      <Label for="UnloadingCity" text="=city" style="&labelLeft;" />
      <DataSelector source="UnloadingCity" style="&input; width:210px;" />
      <Label for="UnloadingPostIndex" text="=postIndex" style="&labelRight;" />
      <InputText source="UnloadingPostIndex" style="&input; width:90px;" />
    </FlowPanel>
    <FlowPanel for="UnloadingAddress" style="&section;">
      <Label for="UnloadingAddress" text="=address" style="&labelLeft;" />
      <InputText source="UnloadingAddress" style="&input; width:400px;" />
    </FlowPanel>
    <FlowPanel for="UnloadingContact" style="&section;">
      <Label for="UnloadingContact" text="=contact" style="&labelLeft;" />
      <InputText source="UnloadingContact" style="&input; width:400px;" />
    </FlowPanel>

    &separator;
    <FlowPanel for="ForwarderVehicle" style="&section;">
      <Label for="ForwarderVehicle" style="&labelLeft; width:140px;" />
      <DataSelector source="ForwarderVehicle" viewName="DistinctForwarderVehicles"
        valueSource="ForwarderVehicle" strict="false" caching="local" style="&input; width:200px;" />
    </FlowPanel>
    <FlowPanel for="Notes" style="&section;">
      <Label for="Notes" style="&labelLeft; vertical-align:top; width:140px;" />
      <InputArea source="Notes" visibleLines="4" style="width:350px;" />
    </FlowPanel>
  </FlowPanel>
</f:Form>
