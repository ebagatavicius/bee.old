<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY lbl "width:135px; text-align: right; padding-right: 9px;">
  <!ENTITY lbl2 "text-align: right; padding-right: 9px;">
  <!ENTITY separator "<hr style=&#34; background-color: red; color: red; height: 1px;&#34;/>">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="NewCargoPurchaseInvoice" viewName="CargoPurchaseInvoices" caption="=trNewCargoPurchaseInvoice"
  width="640" height="250"
  >
  <FlowPanel style="padding: 1px 1px 1px 1px;">
    <Table style="border-spacing: 5px;">
	  <row >
		<cell colSpan="4">
		  &separator;
		</cell>
	  </row>
      <row>
        <Label text="=trdDate" class="bee-required" style="&lbl;" />
        <InputDateTime source="Date" style="width:110px;" />

        <Label text="=orderNumber" style="&lbl;" />
        <InputText source="Number" />
      </row>
      <row>
	    <cell colSpan="4">
	      <Table style="border-spacing: 0px;">
		    <row>
			  <Label text="=currency" class="bee-required" style="&lbl2; width:135px; margin-right: 5px;"/>
			  <DataSelector source="CurrencyName" style="width:40px;" editEnabled="false" />

			  <Label text="=trdInvoicePrefix" style="&lbl2; width: 108px;" />
			  <InputText source="InvoicePrefix" upperCase="true" style="width:50px; margin-right: 4px;" />
		      <InlineLabel text="=trdInvoiceNo" style="&lbl2; margin-right: 5px;" />
			  <InputText source="InvoiceNo" />
		    </row>
		  </Table>
	    </cell>
      </row>
	  <row>
	    <cell colSpan="4">
		  <Table>
		    <row>
			  <Label text="=trdTerm" style="&lbl2; width:131px; text-align:right; margin-right: 5px;" />
			  <InputDate source="Term" style="width:75px;" />
			  <Label name="MainItemCaption" text="=transportMainItemCaption" style="&lbl2; width:214px; margin-right: 5px;" />
			  <UnboundSelector name="MainItem" viewName="Items" renderColumns="Name" />
			</row>
		  </Table>
	    </cell>
	   </row>
	   <row>
         <Label text="=trdSupplier" class="bee-required" style="&lbl;" />
         <DataSelector source="Supplier" required="true" />
         <Label text="=trdCustomer" style="&lbl;" />
         <DataSelector source="Customer" />
       </row>
      <row>
        <Label text="=trdManager" style="&lbl;" />
        <DataSelector source="Manager" editSource="ManagerPerson" />
		<Label for="WarehouseTo" style="&lbl;" />
		<DataSelector source="WarehouseTo" />
      </row>
    </Table>
  </FlowPanel>
</f:Form>
