<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY c1 "min-width: 120px;">
  <!ENTITY multi "width: 500px;">
  <!ENTITY glst "margin-right: 10px;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="TransportTripProfitReport" caption="=trReportTripProfit"
  >
  <FlowPanel>
    <br/>
    <HorizontalPanel>
      <cell kind="label">
        <Label text="=dateFrom" style="&c1;" />
      </cell>
      <InputDateTime name="StartDate" style="width: 120px;" />

      <cell kind="label">
        <Label text="=dateTo" />
      </cell>
      <InputDateTime name="EndDate" style="width: 120px;" />
      
      <cell kind="label">
        <Label text="=currency" />
      </cell>
      <UnboundSelector name="Currency" viewName="Currencies" renderColumns="Name"
        newRowEnabled="false" editPopup="true" style="width: 80px;" />
    </HorizontalPanel>

    <Disclosure open="true">
      <Label text="=filters" />
      <Table>
        <col index="0" kind="label" />

        <row>
          <Label text="=trTrucks" style="&c1;" />
          <MultiSelector name="Vehicle" viewName="Vehicles" renderColumns="Number"
            newRowEnabled="false" editPopup="true" style="&multi;" summarize="true" />
        </row>
        <row>
          <Label text="=trTrips" style="&c1;" />
          <InputText name="TripNo" style="&multi;" summarize="true" />
        </row>
      </Table>
    </Disclosure>
    
    <br/>
    <FlowPanel name="DataContainer" />
  </FlowPanel>
</f:Form>
