<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  
  name="NewMailMessage" caption="=mailNewMessage"
  >
  <FlowPanel class="flexBox-vertical"
    style="margin:5px; position:relative; width:760px; height:500px;">

    <FlowPanel class="bee-mail-Envelope">
      <Table>
        <row>
          <Label text="=mailTo" horizontalAlignment="right" style="white-space:nowrap;" />
          <cell style="width:100%">
            <MultiSelector name="To" viewName="UserEmails" choiceColumns="Label Email" 
              valueSource="Email" strict="false" style="width:100%" />
          </cell>
        </row>
        <row>
          <Label text="=mailCc" horizontalAlignment="right" style="white-space:nowrap;" />
          <MultiSelector name="Cc" viewName="UserEmails" choiceColumns="Label Email" 
            valueSource="Email" strict="false" style="width:100%" />
        </row>
        <row>
          <Label text="=mailBcc" horizontalAlignment="right" style="white-space:nowrap;" />
          <MultiSelector name="Bcc" viewName="UserEmails" choiceColumns="Label Email" 
            valueSource="Email" strict="false" style="width:100%" />
        </row>
      </Table>

      <HorizontalPanel style="width:100%">
        <cell style="vertical-align:top;">
          <InputText name="Subject" placeholder="=mailSubject" style="width:100%" />
        </cell>
        <cell style="">
          <FileCollector name="Attachments">
            <face resource="attachment" />
          </FileCollector>
        </cell>
        <text>&amp;nbsp;</text>
      </HorizontalPanel>
    </FlowPanel>

    <RichTextEditor name="Message" class="bee-mail-Content flexible" />
  </FlowPanel>
</f:Form>
