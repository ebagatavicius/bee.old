<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  xmlns:d="http://www.butent.com/decorator"
  
  name="NewMailMessage" caption="=mailNewMessage"
  >
  <FlowPanel class="flexBox-vertical"
    style="margin:5px; position:relative; width:760px; height:460px;">

    <FlowPanel class="bee-mail-Envelope">
      <FlowPanel>
        <Table>
          <row>
            <Label text="=mailTo" horizontalAlignment="right"  />
            <FlowPanel name="To" />
          </row>
          <row>
            <Label text="=mailCc" horizontalAlignment="right" />
            <FlowPanel name="Cc" />
          </row>
          <row>
            <Label text="=mailBcc" horizontalAlignment="right" />
            <FlowPanel name="Bcc" />
          </row>
        </Table>
      </FlowPanel>

      <InputText name="Subject" placeholder="=mailSubject" style="width:600px; display:block;" />

      <FileCollector name="Attachments">
        <face resource="attachment" />
      </FileCollector>
    </FlowPanel>

    <RichTextEditor name="Message" class="bee-mail-Content flexible" />
  </FlowPanel>
</f:Form>
