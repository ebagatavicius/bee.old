<?xml version="1.0" encoding="UTF-8"?>
<FlowPanel xmlns="http://www.butent.com/widget" class="flexBox-vertical flexible" >
  <FaLabel char="spinner" name="Waiting" class="bee-mail-WaitingForContent" />

  <FlowPanel name="Container" class="flexBox-vertical flexible" >
    <FlowPanel class="bee-mail-Envelope">
      <FlowPanel>
        <FlowPanel name="bee-mail-Sender">
          <TextLabel name="SenderLabel" class="bee-mail-SenderLabel" />
          <TextLabel name="SenderEmail" class="bee-mail-SenderEmail" />
        </FlowPanel>
        <DateTimeLabel name="Date" class="bee-mail-Date" format="EEEE, y 'm'. MMMM d 'd'. HH:mm" />
      </FlowPanel>

      <SimplePanel>
        <TextLabel name="Recipients" class="bee-mail-Recipients" />
      </SimplePanel>

      <FlowPanel>
        <TextLabel name="Subject" class="bee-mail-Subject" />
        <FlowPanel name="Attachments" class="bee-mail-Attachments" />
      </FlowPanel>

      <HorizontalPanel cellStyle="padding: 5px;" style="width:100%">
        <cell style="width:50%; padding:0;">
          <hr style="border:0; border-top:1px solid lightgray;"/>
        </cell>
        <FaLabel name="reply" char="mail_reply" />
        <FaLabel name="replyAll" char="mail_reply_all" />
        <FaLabel name="forward" char="mail_forward" />
        <cell style="width:50%; padding:0;">
          <hr style="border:0; border-top:1px solid lightgray;"/>
        </cell>
      </HorizontalPanel>
    </FlowPanel>

    <Label name="Parts" class="bee-mail-Content flexible" style="overflow: auto;" />
  </FlowPanel>
</FlowPanel>
